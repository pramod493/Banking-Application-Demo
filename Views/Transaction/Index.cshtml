@model IEnumerable<Transaction>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.SourceId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.SourceBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.DestinationBalance)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransferTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TransferAmount)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.SourceId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationId)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SourceBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.DestinationBalance)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransferTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TransferAmount)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
